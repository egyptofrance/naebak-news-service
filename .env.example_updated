# إعدادات خدمة الأخبار - مشروع نائبك
# Flask + SQLite Environment Variables

# إعدادات التطبيق الأساسية
FLASK_ENV=development
SECRET_KEY=naebak-news-service-secret-key-2024
DEBUG=true

# إعدادات الخدمة
SERVICE_NAME=naebak-news-service
SERVICE_VERSION=1.0.0
HOST=0.0.0.0
PORT=8009

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///naebak_news.db

# إعدادات Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=3
REDIS_PASSWORD=

# إعدادات الأمان
API_KEY=naebak-news-api-key-2024
ADMIN_KEY=naebak-news-admin-key-2024

# إعدادات رفع الملفات
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# إعدادات البريد الإلكتروني
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=news@naebak.com

# إعدادات وسائل التواصل الاجتماعي
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_HANDLE=@naebak_egypt

# إعدادات التكامل مع الخدمات الأخرى
AUTH_SERVICE_URL=http://localhost:8001
ADMIN_SERVICE_URL=http://localhost:8006
NOTIFICATION_SERVICE_URL=http://localhost:8007

# إعدادات المراقبة
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60
METRICS_RETENTION_HOURS=24

# إعدادات التنظيف التلقائي
AUTO_CLEANUP_ENABLED=true
CLEANUP_INTERVAL=86400
OLD_STATS_CLEANUP_DAYS=365
OLD_COMMENTS_CLEANUP_DAYS=180

# إعدادات الأرشفة
AUTO_ARCHIVE_ENABLED=true
AUTO_ARCHIVE_DAYS=365

# إعدادات الأداء
ENABLE_GZIP=true
ENABLE_ETAG=true
CACHE_STATIC_FILES=true

# إعدادات Rate Limiting
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_NEWS_CREATE=10 per hour
RATE_LIMIT_COMMENT_CREATE=20 per hour

# إعدادات المحتوى
MAX_TITLE_LENGTH=200
MAX_SUMMARY_LENGTH=500
MAX_CONTENT_LENGTH=50000
MAX_COMMENT_LENGTH=500

# إعدادات الصفحات
NEWS_PER_PAGE=10
COMMENTS_PER_PAGE=20
FEATURED_NEWS_COUNT=5
BREAKING_NEWS_DURATION=24

# إعدادات التعليقات
COMMENTS_ENABLED=true
COMMENTS_MODERATION=true
COMMENTS_PER_NEWS=100

# إعدادات البحث
SEARCH_RESULTS_PER_PAGE=15
SEARCH_MIN_LENGTH=3
SEARCH_MAX_LENGTH=100

# إعدادات الإحصائيات
STATS_RETENTION_DAYS=365
STATS_UPDATE_INTERVAL=3600

# إعدادات اللغة والتوقيت
DEFAULT_LANGUAGE=ar
TIMEZONE=Africa/Cairo
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# إعدادات SEO
DEFAULT_META_TITLE=نائبك - أخبار
DEFAULT_META_DESCRIPTION=آخر الأخبار والتطورات من منصة نائبك
DEFAULT_META_KEYWORDS=نائبك، أخبار، مصر، برلمان، نواب، سياسة

# إعدادات وسائل التواصل الاجتماعي
SOCIAL_SHARING_ENABLED=true
